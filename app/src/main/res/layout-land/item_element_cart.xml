<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e7e7e7"
                android:paddingTop="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_top_style_1"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img_view_cart"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding_small"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/ic_cart"/>

        <TextView
            android:id="@+id/cart_diviuder0"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:background="@android:color/darker_gray"
            />

        <TextView
            android:id="@+id/txt_cart_name"
            style="@android:style/TextAppearance.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="4dp"
            android:maxLines="2"
            android:scrollHorizontally="true"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/cart_diviuder1"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:background="@android:color/darker_gray"
            />

        <TextView
            android:id="@+id/txt_cart_count"
            style="@android:style/TextAppearance.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="@dimen/padding_small"
            android:layout_weight="1"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/cart_diviuder2"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:background="@android:color/darker_gray"
            />

        <TextView
            android:id="@+id/txt_cart_summa"
            style="@android:style/TextAppearance.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="@dimen/padding_small"
            android:textColor="@android:color/black"/>

    </LinearLayout>

</RelativeLayout>